#!/bin/bash

help() {
  printf "Usage: infa <arguments>\n-d Download InfaScripts\n-s Starts InfaScripts\n-u Update InfaScripts\n-r Remove InfaScripts\n-h Help\n"
  exit 1
}

# Verifica se sono stati forniti argomenti
if [ "$#" -eq 0 ]; then
  help
elif [ "$1" == "-d" ]; then
  apt update -y
  echo -e "\n"
  apt install wget git tsu -y
  echo -e "\n"
  rm -rf $HOME/infaScript > /dev/null 2>&1
  wget https://raw.githubusercontent.com/Infamousmick/infaScript/stable_up/setup.sh > /dev/null 2>&1
  bash setup.sh
elif [ "$1" == "-s" ]; then
  cd $HOME/infaScript
  bash run.sh
elif [ "$1" == "-u" ]; then
  rm $HOME/setup.sh
  wget https://raw.githubusercontent.com/Infamousmick/infaScript/stable_up/setup.sh > /dev/null 2>&1
  bash setup.sh
elif [ "$1" == "-r" ]; then
rm $HOME/setup.sh
rm -rf $HOME/infaScript
echo "InfaScript removed"
elif [ "$1" == "-h" ]; then
  help
else
  help
fi
